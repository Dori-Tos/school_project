<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="school_project.Views.TeachersPage"
             Title="TeachersPage">

    <StackLayout>
        <ListView x:Name="ListTeachers">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding firstname}" />
                            <Label Text="{Binding lastname}" Margin="5,0,0,0"/>
                            <Label Text="{Binding salary}" Margin="5,0,0,0"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Entry x:Name="entryFirstName" Placeholder="Firstname"/>

        <Entry x:Name="entryLastName" Placeholder="Lastname"/>

        <Entry x:Name="entrySalary" Placeholder="Salary" Keyboard="Numeric"/>

        <Button Text="Add New Teacher" Clicked="AddNewTeacherClicked"/>
    </StackLayout>

</ContentPage>